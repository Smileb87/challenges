const StyledBox = styled.div`
  width: 100px;
  height: 100px;
  margin: 10px;
  transition: background-color 0.3s ease;

  background-color: ${(props) => (props.isBlack ? 'black' : 'green')};

  &:hover {
    background-color: red;
  }
`;

export default StyledBox;
